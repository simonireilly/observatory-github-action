{
  "name": "observatory-github-action",
  "description": "Observatory CLI runner for github actions",
  "version": "0.1.0",
  "author": "",
  "dependencies": {
    "@actions/core": "1.6.0",
    "@actions/exec": "1.1.0"
  },
  "devDependencies": {
    "@types/jest": "27.0.3",
    "@types/node": "14.17.18",
    "@typescript-eslint/eslint-plugin": "5.23.0",
    "@typescript-eslint/parser": "5.7.0",
    "@vercel/ncc": "0.33.0",
    "embedme": "1.22.0",
    "eslint": "8.4.1",
    "eslint-plugin-github": "4.3.5",
    "eslint-plugin-jest": "25.3.0",
    "husky": "^7.0.0",
    "jest": "27.4.5",
    "jest-circus": "27.4.5",
    "js-yaml": "4.1.0",
    "release-it": "14.11.8",
    "ts-jest": "27.1.2",
    "typescript": "4.5.4"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "license": "MIT",
  "main": "lib/main.js",
  "private": true,
  "repository": "simonireilly/observatory-github-action",
  "scripts": {
    "all": "npm run build && npm run package",
    "build": "tsc --build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "npm run lint --fix",
    "observatory-cli": "observatory",
    "package": "ncc build --source-map --license licenses.txt",
    "prepare": "husky install",
    "pub:beta": "release-it --preRelease=beta --no-npm.publish",
    "pub:latest": "release-it --no-npm.publish",
    "readme": "embedme README.md",
    "test": "jest --runInBand"
  }
}
