{
  "name": "observatory-github-action",
  "description": "Observatory CLI runner for github actions",
  "version": "0.1.3",
  "author": "",
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/exec": "1.1.1"
  },
  "devDependencies": {
    "@tsconfig/node18": "^2.0.0",
    "@types/jest": "29.5.1",
    "@types/node": "18.16.3",
    "@typescript-eslint/eslint-plugin": "5.59.0",
    "@typescript-eslint/parser": "5.59.0",
    "@vercel/ncc": "0.36.1",
    "embedme": "1.22.1",
    "eslint": "8.39.0",
    "eslint-plugin-github": "4.7.0",
    "eslint-plugin-jest": "27.2.1",
    "husky": "^8.0.3",
    "jest": "29.5.0",
    "js-yaml": "4.1.0",
    "release-it": "15.10.1",
    "syncpack": "^9.8.4",
    "ts-jest": "29.1.0",
    "typescript": "5.0.4"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "license": "MIT",
  "main": "lib/main.js",
  "private": true,
  "repository": "simonireilly/observatory-github-action",
  "scripts": {
    "all": "npm run build && npm run package",
    "build": "tsc --build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "npm run lint --fix",
    "observatory-cli": "observatory",
    "package": "ncc build --minify --license LICENSE",
    "prepare": "husky install",
    "pub:beta": "release-it --preRelease=beta --no-npm.publish",
    "pub:latest": "release-it --no-npm.publish",
    "readme": "embedme README.md",
    "test": "jest unit",
    "test:integration": "jest --runInBand integration"
  }
}
