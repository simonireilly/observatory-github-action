{
  "name": "observatory-github-action",
  "version": "0.0.2-beta.0",
  "private": true,
  "description": "Observatory CLI runner for github actions",
  "main": "lib/main.js",
  "scripts": {
    "observatory-cli": "observatory",
    "build": "tsc --build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "lint-fix": "npm run lint --fix",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --runInBand",
    "readme": "embedme README.md",
    "all": "npm run build && npm run package",
    "pub:beta": "release-it --preRelease=beta --no-npm.publish"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn readme && yarn lint-fix && yarn all"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/simonireilly/observatory-github-action"
  },
  "keywords": [
    "actions",
    "node",
    "setup"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4"
  },
  "devDependencies": {
    "@release-it/keep-a-changelog": "^2.2.2",
    "@types/jest": "27.0.2",
    "@types/node": "16.11.9",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.14.2",
    "@vercel/ncc": "0.31.1",
    "embedme": "^1.22.0",
    "eslint": "^7.22.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "7.0.2",
    "jest": "27.2.1",
    "release-it": "^14.7.0",
    "ts-jest": "27.0.5",
    "typescript": "^4.1.5"
  }
}
